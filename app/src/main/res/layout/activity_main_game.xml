<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/solar_system_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nasalization"
            android:text="System Name"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_solarSystem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solar System" />

        <Button
            android:id="@+id/button_mercenary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mercenaries" />

        <Button
            android:id="@+id/button_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market" />

        <Button
            android:id="@+id/button_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player" />

        <Button
            android:id="@+id/button_travel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel" />

        <Button
            android:id="@+id/button_cargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargo" />

        <Button
            android:id="@+id/button_shipyard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipyard" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>