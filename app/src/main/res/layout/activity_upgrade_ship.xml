<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weaponsTitle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.views.ShipYardActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="67dp"
        android:text="The Ship Yard"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/shipSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/shipSpinner"
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="136dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/previewButton"
        android:layout_width="108dp"
        android:layout_height="41dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="220dp"
        android:text="Preview "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="92dp"
        android:text="Ship Type"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/purchaseButtn"
        android:layout_width="106dp"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="96dp"
        android:text="Purchase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="101dp"
        android:layout_height="33dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="260dp"
        android:text="Weapons "
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sLaser"
        android:layout_width="116dp"
        android:layout_height="76dp"
        android:layout_marginTop="300dp"
        android:text="Sonic Ray: 250c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pLaser"
        android:layout_width="128dp"
        android:layout_height="73dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="148dp"
        android:text="Plasma Ray: 500c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mLaser"
        android:layout_width="139dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:text="Meson Phaser: 750c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="320dp"
        android:text="5 Health Damage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginBottom="320dp"
        android:text="15 Health Damage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="320dp"
        android:text="25 Health Damage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="188dp"
        android:layout_marginBottom="268dp"
        android:text="Shields "
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/silverShield"
        android:layout_width="118dp"
        android:layout_height="67dp"
        android:layout_marginStart="260dp"
        android:layout_marginBottom="188dp"
        android:text="Silver Dynasty: 350c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/goldShield"
        android:layout_width="119dp"
        android:layout_height="73dp"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="180dp"
        android:text="Golden Dynasty: 750c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/viewPlayerCurrency"
        android:layout_width="63dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="48dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>